<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:stretchColumns="1,2,3,4,5"
    android:layout_height="wrap_content">

    <TableRow>
        <TextView
            android:id="@+id/tbl_tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:maxEms="6"
            android:text="tanggal"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/table_content_row_bg"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/tbl_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="18sp"
            android:background="@drawable/table_content_row_bg"
            android:gravity="center"
            android:ems="10"
            android:maxEms="10"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/tbl_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kelas"
            android:textSize="18sp"
            android:ems="5"
            android:maxEms="5"
            android:background="@drawable/table_content_row_bg"
            android:gravity="center"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/tbl_matpel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mata pelajaran"
            android:textSize="18sp"
            android:background="@drawable/table_content_row_bg"
            android:gravity="center"
            android:ems="8"
            android:maxEms="8"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/tbl_ket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ket"
            android:textSize="18sp"
            android:ems="5"
            android:maxEms="5"
            android:background="@drawable/table_content_row_bg"
            android:gravity="center"
            android:layout_column="1"/>
    </TableRow>

</TableLayout>